{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "outDir": "build",
    "target": "es2015",
    "sourceMap": true
  },
  "includes": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
