{
  "name": "neovim-component",
  "version": "0.2.8",
  "description": "Polymer component for Neovim frontend",
  "main": "example/minimal/main.js",
  "bin": {
    "nvim-md-example": "./example/minimal/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rhysd/neovim-component.git"
  },
  "bugs": {
    "url": "https://github.com/rhysd/neovim-component/issues"
  },
  "scripts": {
    "all": "npm run dep && npm run build && npm run example",
    "build": "$(npm bin)/tsc -p src && $(npm bin)/browserify -o build/index.js src/out/index.js",
    "debug": "NODE_ENV=debug $(npm bin)/electron .",
    "dep": "npm install && $(npm bin)/bower install && $(npm bin)/tsd install && mkdir -p $(npm prefix)/build",
    "example": "$(npm bin)/electron .",
    "lint": "$(npm bin)/tslint $(git ls-files | grep -E \".ts$\")",
    "test": "$(npm bin)/mocha test/unit/ test/e2e/"
  },
  "keywords": [
    "neovim",
    "polymer",
    "WebComponent",
    "Electron",
    "NW.js",
    "editor"
  ],
  "author": "rhysd <lin90162@yahoo.co.jp>",
  "license": "MIT",
  "dependencies": {
    "flux": "^2.1.1",
    "loglevel": "^1.4.0",
    "promised-neovim-client": "^1.0.0"
  },
  "devDependencies": {
    "bower": "^1.7.1",
    "browserify": "^12.0.1",
    "chai": "^3.4.1",
    "electron-prebuilt": "^0.36.3",
    "jsdom": "^7.2.2",
    "mocha": "^2.3.4",
    "mocha-generators": "^1.2.0",
    "nightmare": "https://github.com/rhysd/nightmare.git#custom-electron-path",
    "tsd": "^0.6.5",
    "tslint": "^3.2.1",
    "typescript": "^1.7.3"
  }
}
